{
  "Three column grid": {
    "prefix": "3-grid",
    "body": [
      "<section class=\"three-grids\">",
      "    <div><!-- content --></div>",
      "    <div><!-- content --></div>",
      "    <div><!-- content --></div>",
      "</section>",
      "<style>",
      ".three-grids",
      "{",
      "    display: grid;",
      "    grid-template-columns: repeat(3, 1fr);",
      "    column-gap: 20px;",
      "}",
      "</style>"
    ],
    "description": "Creating 3-column grid using display:grid;"
  },
  "Flex vertical centering": {
    "prefix": "vertical-center",
    "body": [
      "<div class=\"vertical-center\"><!-- content -->$0</div>",
      "<style>",
      ".vertical-center",
      "{",
      "    display: flex;",
      "    align-items: center;",
      "    align-content: center;",
      "    flex-direction: row;",
      "}",
      "</style>"
    ],
    "description": "Vertical centering using display:flex"
  },
  "Flex horizontal centering": {
    "prefix": "horizontal-center",
    "body": [
      "<div class=\"horizontal-center\"><!-- content -->$0</div>",
      "<style>",
      ".horizontal-center",
      "{",
      "    display: flex;",
      "    justify-content: center;",
      "    flex-direction: row;",
      "}",
      "</style>"
    ],
    "description": "Horizontal centering using display:flex"
  },
  "Flex centering": {
    "prefix": "center-center",
    "body": [
      "<div class=\"center-center\"><!-- content -->$0</div>",
      "<style>",
      ".center-center",
      "{",
      "    display: flex;",
      "    align-items: center;",
      "    align-content: center;",
      "    justify-content: center;",
      "    flex-direction: row;",
      "}",
      "</style>"
    ],
    "description": "Horizontal and vertical centering using display:flex"
  },
  "HTML login form": {
    "prefix": "login-form",
    "body": [
      "<form method=\"$1\" action=\"$0\">",
      "\t<div>",
      "\t\t<label for=\"username\">Username</label>",
      "\t\t<input type=\"name\" type=\"text\" id=\"username\">",
      "\t</div>",
      "\t<div>",
      "\t\t<label for=\"password\">Password</label>",
      "\t\t<input type=\"name\" type=\"text\" id=\"password\">",
      "\t</div>",
      "\t<button type=\"submit\">Submit</button>",
      "</form>"
    ],
    "description": "Simple HTML login form"
  },
  "Form text field": {
    "prefix": "input:text:label",
    "body": [
      "<label for=\"${1}\">${2}</label>",
      "<input type=\"text\" name=\"${3}\" id=\"${1}\" placeholder=\"${4}\">"
    ],
    "description": "Text field with corresponding label"
  }
}
